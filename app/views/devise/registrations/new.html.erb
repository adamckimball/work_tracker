<div class="flex flex-col items-center justify-center mt-24">
  <h1 class="text-4xl font-bold mb-8 text-blue-400">Sign up</h1>
  <div class="w-full max-w-md bg-gray-800 p-8 rounded shadow">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= render "shared/forms/form_field", f: f, field: :email, resource: resource do %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 rounded bg-gray-900 text-gray-100 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% end %>

      <%= render "shared/forms/form_field", f: f, field: :password, resource: resource do %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 rounded bg-gray-900 text-gray-100 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br>
      <% end %>

      <%= render "shared/forms/form_field", f: f, field: :password_confirmation, resource: resource do %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 rounded bg-gray-900 text-gray-100 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% end %>

      <div class="actions">
        <%= render "shared/forms/form_submit", f:, label: 'Sign Up' %>
      </div>
    <% end %>
    <div class="mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
