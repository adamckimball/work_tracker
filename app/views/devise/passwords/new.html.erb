<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= render "shared/forms/form_field", f: f, field: :email, resource: resource do %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: "w-full px-3 py-2 rounded bg-gray-800 text-gray-100 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  <% end %>

  <div class="actions">
    <%= render "shared/forms/form_submit", f:, label: 'Send me reset password instructions' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
