<div class="flex flex-col items-center justify-center min-h-screen">
  <% if @user %>
    <h1 class="text-4xl font-bold mb-4 text-blue-400">Welcome Back</h1>
    <div class="grid grid-cols-1 gap-4">
      <p class="text-lg text-gray-300">Head to the dashboard to start logging</p>
      <%= link_to "Dashboard", "/dashboard", class: "px-6 py-2 rounded bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow transition-colors duration-200 text-center" %>
      <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "px-6 py-2 rounded bg-red-600 hover:bg-red-500 text-white font-semibold shadow transition-colors duration-200 text-center", form_class: 'flex justify-center', data: { turbo: false} %>
    </div>
  <% else %>
    <h1 class="text-4xl font-bold mb-4 text-blue-400">Welcome</h1>
    <div class="grid grid-cols-1 gap-4">
      <p class="text-lg text-gray-300">Log in or sign up to start tracking your work</p>
      <%= link_to "Log In", "/users/sign_in", class: "px-6 py-2 rounded bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow transition-colors duration-200 text-center", data: { turbo: false} %>
      <%= link_to "Sign Up", "/users/sign_up", class: "px-6 py-2 rounded bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow transition-colors duration-200 text-center", data: { turbo: false} %>
    </div>
  <% end %>
</div>
