<%= link_to "Add New Entry", new_log_entry_path, class: "px-6 py-2 rounded bg-blue-600 hover:bg-blue-500 text-white font-semibold shadow transition-colors duration-200 text-center" %>
<% if @log_entries.any? %>
  <table class="min-w-full bg-white border border-gray-200">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Date</th>
        <th class="py-2 px-4 border-b">Project</th>
        <th class="py-2 px-4 border-b">Content</th>
        <th class="py-2 px-4 border-b">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @log_entries.each do |entry| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= entry.entry_date %></td>
          <td class="py-2 px-4 border-b"><%= entry.project&.name %></td>
          <td class="py-2 px-4 border-b"><%= entry.content %></td>
          <td class="py-2 px-4 border-b">
            <%= link_to "Edit", edit_log_entry_path(entry), class: "text-blue-600 hover:text-blue-500" %>
            <%= link_to "Delete", log_entry_path(entry), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-500" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-gray-500">No log entries found.</p>
<% end %>
